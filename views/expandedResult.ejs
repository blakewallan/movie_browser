<h1>Expanded Result</h1>

<div class="container">

<h1><%=fullResult.Genre%></h1>


    <div class="col-md-6">

        <%
        if(fullResult.Poster !== 'N/A'){
            var pic = fullResult.Poster;
        }
        else {
            var pic =  'http://placehold.it/300x400';
        }%>

        <a href="<%= pic %>">
            <img src="<%= pic %>">
        </a>

    </div>

    <div class="col-md-6">

        <h1><%= fullResult.Title %></h1>
        <br>
        <p><%= fullResult.Plot %></p>

    </div>


</div>