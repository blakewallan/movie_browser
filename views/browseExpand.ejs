<div class="container">

    <%
    var omdb = fullResult.fullResults.omdbResults[0];
    var torrents = fullResult.fullResults.torrents[0];
    var onNetflix = fullResult.fullResults.onNetflix;

    if(omdb){ %>

    <div class="col-md-6">

        <%
        if(omdb.Poster !== 'N/A'){
            var pic = omdb.Poster
        }
        else {
            var pic =  'http://placehold.it/300x400'
        }%>

        <a href="<%= pic %>">
            <img src="<%= pic %>">
        </a>

    </div>

    <div class="col-md-6">

        <h1><%= omdb.Title %></h1>
        <br>
        <h3><%="IMDB Rating: " + omdb.imdbRating %></h3>
        <br>
        <h3><%= omdb.Genre%></h3>
        <br>
        <p><%= omdb.Plot %>

                <br>

            <a href="<%= 'magnet:?xt=urn:btih:' + torrents.torrent_hash%>"><button class="btn btn-primary">Download</button> </a>

            <% if (onNetflix === false){ %>
                <h3>Sorry this movie is not on Netflix</h3>
            <% } else {  %>
                <a href="<%"http://www.netflix.com/title/"+ onNetflix.show_id %>"><button class="btn btn-danger">Watch on Netflix</button> </a>
        <% } %>

<% } else { %>

        <h1>Sorry this movie can not be loaded</h1>

        <% } %>

    </div>


</div>
